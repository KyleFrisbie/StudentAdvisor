<h1>Listing students</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Record number</th>
      <th>Major</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.record_number %></td>
        <td><%= student.major %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', student, :class => 'btn btn-primary' %>
            <%= link_to 'Edit', edit_student_path(student), :class => 'btn btn-warning' %>
            <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-default"><%= link_to 'New Student', new_student_path %></button>
