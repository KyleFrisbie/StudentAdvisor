<h1>Listing sections</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Course</th>
      <th>Name</th>
      <th>Professor</th>
      <th>Crn</th>
      <th>Building</th>
      <th>Room</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.course_id %></td>
        <td><%= section.course.name %></td>
        <td><%= section.professor.last_name %></td>
        <td><%= section.crn %></td>
        <td><%= section.building %></td>
        <td><%= section.room %></td>
        <td><%= section.start_time %></td>
        <td><%= section.end_time %></td>
        <td><%= section.start_date %></td>
        <td><%= section.end_date %></td>
        <td><%= section.days %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', section, :class => 'btn btn-primary' %>
            <%= link_to 'Edit', edit_section_path(section), :class => 'btn btn-warning' %>
            <%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path, :class => 'btn btn-default' %>