<%= simple_form_for(@section, html: {class: 'form-horizontal'}) do |f| %>
    <% if @section.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h2>

          <ul>
            <% @section.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.input :crn %>
    <%= f.input :building %>
    <%= f.input :room %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :days %>
    <%= f.association :course %>
    <%= f.association :professor, label_method: :last_name %>
    <%= f.association :students, label_method: :last_name %>
    <%= f.button :submit %>
<% end %>
