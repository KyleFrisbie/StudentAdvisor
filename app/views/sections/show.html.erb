<p id="notice"><%= notice %></p>

<p>
  <strong>Crn:</strong>
  <%= @section.crn %>
</p>

<p>
  <strong>Name:</strong>
  <%= @section.course.name %>
</p>

<p>
  <strong>Professor:</strong>
  <%= @section.professor.last_name %>, <%= @section.professor.first_name %>
</p>

<p>
  <strong>Building:</strong>
  <%= @section.building %>
</p>

<p>
  <strong>Room:</strong>
  <%= @section.room %>
</p>

<p>
  <strong>Start time:</strong>
  <%= @section.start_time %>
</p>

<p>
  <strong>End time:</strong>
  <%= @section.end_time %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @section.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @section.end_date %>
</p>

<p>
  <strong>Days:</strong>
  <%= @section.days %>
</p>

<p><strong>Registered Students:</strong></p>

<table class="table table-striped">
  <thead>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Record number</th>
    <th>Major</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @section.students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.record_number %></td>
        <td><%= student.major %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="btn-group">
  <%= link_to 'Edit', edit_section_path(@section), :class => 'btn btn-info' %>
  <%= link_to 'Back', sections_path, :class => 'btn btn-default' %>
</div>
