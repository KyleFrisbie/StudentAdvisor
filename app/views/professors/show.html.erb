<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @professor.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @professor.last_name %>
</p>

<p>
  <strong>Record number:</strong>
  <%= @professor.record_number %>
</p>

<p>
  <strong>Department:</strong>
  <%= @professor.department %>
</p>

<p><strong>Sections Teaching:</strong></p>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Course</th>
    <th>Name</th>
    <th>Professor</th>
    <th>Crn</th>
    <th>Building</th>
    <th>Room</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Days</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @professor.sections.each do |section| %>
      <tr>
        <td><%= section.course_id %></td>
        <td><%= section.course.name %></td>
        <td><%= section.professor.last_name %></td>
        <td><%= section.crn %></td>
        <td><%= section.building %></td>
        <td><%= section.room %></td>
        <td><%= section.start_time %></td>
        <td><%= section.end_time %></td>
        <td><%= section.start_date %></td>
        <td><%= section.end_date %></td>
        <td><%= section.days %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<div class="btn-group">
  <%= link_to 'Edit', edit_professor_path(@professor), :class => 'btn btn-info' %>
  <%= link_to 'Back', professors_path, :class => 'btn btn-default' %>
</div>