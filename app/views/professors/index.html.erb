<h1>Listing professors</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Record number</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.first_name %></td>
        <td><%= professor.last_name %></td>
        <td><%= professor.record_number %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show', professor, :class => 'btn btn-primary' %>
            <%= link_to 'Edit', edit_professor_path(professor), :class => 'btn btn-warning' %>
            <%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professor', new_professor_path, :class => 'btn btn-default' %>
